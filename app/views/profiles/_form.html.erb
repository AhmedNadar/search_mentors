<%= form_for @profile do |f| %>

  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name%>
  </div>

  <div class="field">
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :company %><br />
    <%= f.text_field :company%>
  </div>

  <div class="field">
    <%= f.label :summery %>
    <%= f.text_area :summery %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>


  <!-- We add this to the Registration form so we can create a new company. You can add more company fields here -->
  <div class="field">
    <%= f.label "Specialized Skills"  %><br />
    <%= f.collection_select :skill_ids, Skill.all, :id, :name, {}, {:multiple => true} %>
</div>

  <div class="field">
    <%= f.label "Industry"  %><br />
    <%= f.collection_select :industry_ids, Industry.all, :id, :name, {}, {:multiple => true} %>
</div>


  <div class="field">
    <%= f.label "Job Function"  %><br />
    <%= f.collection_select :job_ids, Job.all, :id, :name, {}, {:multiple => true} %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
