<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Company</th>
      <th>Summery</th>
      <th>City</th>
      <th>Country</th>
      <th>Gender</th>
      <th>Avatar</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.first_name %></td>
        <td><%= profile.last_name %></td>
        <td><%= profile.company %></td>
        <td><%= profile.summery %></td>
        <td><%= profile.city %></td>
        <td><%= profile.country %></td>
        <td><%= profile.gender %></td>
        <td><%= image_tag profile.avatar.url(:thumb) %></td>
        <td><%= link_to 'Show Profile', profile_path(profile) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
